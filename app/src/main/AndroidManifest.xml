<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neyagodamalina.nibnim">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_translate_white_24dp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_translate_white_24dp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.neyagodamalina.nibnim.TranslateActivity"
            android:label="@string/app_name"
            android:icon="@drawable/ic_translate_normal">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.neyagodamalina.nibnim.HistoryActivity"
            android:label="@string/title_activity_history"
            >
        </activity>
        <activity
            android:name="com.neyagodamalina.nibnim.FavoriteActivity"
            android:label="@string/title_activity_favorite"
            >
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>