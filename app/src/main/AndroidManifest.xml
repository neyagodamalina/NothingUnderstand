<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neyagodamalina.nibnim">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.neyagodamalina.nibnim.TranslateActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.neyagodamalina.nibnim.HistoryActivity"
            android:label="@string/title_activity_history"
            android:parentActivityName="com.neyagodamalina.nibnim.TranslateActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.neyagodamalina.nibnim.TranslateActivity" />
        </activity>
        <activity
            android:name="com.neyagodamalina.nibnim.FavoriteActivity"
            android:label="@string/title_activity_favorite"
            android:parentActivityName="com.neyagodamalina.nibnim.TranslateActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.neyagodamalina.nibnim.TranslateActivity" />

        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>